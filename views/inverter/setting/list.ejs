<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Inverter
    <small>Setting</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Power</li>
  </ol>
</section>

<!-- Main content -->
<section class="content container-fluid">
	<div class="panel-heading">
    <a href="/inverter/setting/add">Add config</a>
	</div>
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">Setting</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body no-padding">
      <div class="col-md-3">
        <table class="table table-condensed">
          <tr>
            <th>Name</th>
            <th>Broker Addr</th>
            <th>Port</th>
            <th colspan="2">Action</th>
          </tr>
          <% settings.forEach(function(val) { %>
            <tr>
              <td><%= val.name %></td>
              <td><%= val.broker %></td>
              <td><%= val.port %></td>
              <td class="text-center">
                <a class='btn btn-info btn-xs' href="/inverter/setting/edit/<%= val.id %>">
                  <span class="glyphicon glyphicon-edit"></span>Edit</a>
                <a href="/inverter/setting/delete/<%= val.id %>" class="btn btn-danger btn-xs">
                  <span class="glyphicon glyphicon-remove"></span> Del</a>
              </td>
            </tr>
          <% }) %>

          <!-- <tr>
            <td>192.168.0.1</td>
            <td>1883</td>
          </tr> -->
        </table>
      </div>

      
      

    </div>
  </div>
	


</section>

